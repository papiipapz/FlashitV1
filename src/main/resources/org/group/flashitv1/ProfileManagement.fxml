<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" style="-fx-background-color: #70bcff;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group.flashitv1.ProfileManagementController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Settings" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="-35.0" />
                           </HBox.margin>
                        </Text>
                     </children>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Change Profile">
               <font>
                  <Font name="System Bold" size="16.0" />
               </font>
            </Text>
            <VBox spacing="7.0">
               <children>
                  <Text id="userText" fx:id="userText" strokeType="OUTSIDE" strokeWidth="0.0" text="Username">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Text>
                  <TextField id="userInput" fx:id="userInput" promptText="Username" />
                  <Text id="passText" fx:id="passText" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Text>
                  <PasswordField fx:id="passInput" />
                  <Text id="newPassText" fx:id="newPassText" strokeType="OUTSIDE" strokeWidth="0.0" text="New Password">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Text>
                  <PasswordField fx:id="newPassInput" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="50.0" right="50.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </VBox>
            <Button id="saveButton" fx:id="saveButton" mnemonicParsing="false" onAction="#saveChanges" prefHeight="40.0" prefWidth="200.0" styleClass="papibuttons" stylesheets="@../../../css/styles.css" text="Save Changes">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Button>
            <Button id="backButton" fx:id="backButton" mnemonicParsing="false" onAction="#menuButton" prefHeight="35.0" prefWidth="140.0" styleClass="papibuttonsTransparent" stylesheets="@../../../css/styles.css" text="Back to Menu" />
         </children>
      </VBox>
   </children>
</AnchorPane>
