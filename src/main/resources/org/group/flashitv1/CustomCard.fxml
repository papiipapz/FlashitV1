<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" style="-fx-background-color: #70bcff;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.group.flashitv1.CustomCardController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="500.0">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create a new FlashIT set:">
                           <font>
                              <Font name="System Bold" size="20.0" />
                           </font>
                        </Text>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                     <padding>
                        <Insets left="50.0" />
                     </padding>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <padding>
                        <Insets right="15.0" />
                     </padding>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <ScrollPane prefHeight="350.0" prefWidth="200.0" style="-fx-background-color: #70bcff;" stylesheets="@../../../css/styles.css">
               <content>
                  <VBox id="cardForm" fx:id="cardForm" prefHeight="350.0" prefWidth="484.0" spacing="5.0" style="-fx-background-color: #70bcff;">
                     <children>
                        <Text id="titleText" fx:id="titleText" strokeType="OUTSIDE" strokeWidth="0.0" text="Title">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Text>
                        <TextField id="titleInput" fx:id="titleInput" promptText="Enter a Title..." />
                        <Text fx:id="descriptionText" strokeType="OUTSIDE" strokeWidth="0.0" text="Description">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Text>
                        <TextField fx:id="descriptionInput" promptText="Add a description..." />
                        <Text fx:id="categoryText" strokeType="OUTSIDE" strokeWidth="0.0" text="Category">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Text>
                        <TextField fx:id="categoryInput" promptText="Add a category..." />
                        <VBox id="questionsBox" fx:id="questionsBox" prefHeight="200.0" prefWidth="0.0" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Text fx:id="questionText" strokeType="OUTSIDE" strokeWidth="0.0" text="Term/Question">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Text>
                              <TextArea fx:id="questionInput" prefHeight="100.0" prefWidth="200.0" promptText="Term/Question" wrapText="true" />
                              <Text fx:id="answerText" strokeType="OUTSIDE" strokeWidth="0.0" text="Definition/Answer">
                                 <font>
                                    <Font name="System Bold" size="12.0" />
                                 </font>
                              </Text>
                              <TextArea fx:id="answerInput" prefHeight="100.0" prefWidth="200.0" promptText="Definition/Answer" wrapText="true" />
                           </children>
                        </VBox>
                        <Button id="addQuestions" fx:id="addQuestions" mnemonicParsing="false" onAction="#addQuestionContainer" prefWidth="399.2" text="Add more" />
                     </children>
                     <padding>
                        <Insets left="50.0" right="50.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <Button id="createNewCard" fx:id="createNewCard" mnemonicParsing="false" onAction="#createNewCard" prefHeight="40.0" prefWidth="200.0" text="Create" />
            <Button id="menuButton" fx:id="menuButton" mnemonicParsing="false" onAction="#switchBackToPreviousScene" prefHeight="40.0" prefWidth="200.0" text="Back To Menu" />
         </children>
      </VBox>
   </children>
</AnchorPane>
